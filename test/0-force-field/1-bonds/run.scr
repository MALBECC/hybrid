#!/bin/bash
rm Energy.dat Forces.dat Test.out

for i in {0..9}; do
for j in {01..10}; do

cp base.fdf Test.fdf

sed -i -e s/NN/0$i/g Test.fdf
sed -i -e s/XX/$j/g Test.fdf

../../../bin/hybrid < Test.fdf >> Test.out

grep "Etots:" Test.out >> Energy.dat
tail Pos_forces.dat >> Forces.dat
rm Test.out


done
done
rm INPUT_TMP.*



